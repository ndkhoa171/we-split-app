<Window x:Class="WeSplitApp.WindowAddImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplitApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="WindowAddImage" Height="450" Width="800">
    <Canvas>
        <Border BorderBrush="Gray" BorderThickness="3" Height="229" Width="471"  Canvas.Left="172" Canvas.Top="36">
        <Image Name="image"  ></Image>
        </Border>
        <Label Canvas.Left="386"  Canvas.Top="136" Foreground="Gray" RenderTransformOrigin="1.074,0.787">Image</Label>
        <Button Content="Chọn ảnh" Click="FindImage" Canvas.Left="63" Canvas.Top="136"></Button>
        <Button Content="Thêm vào lộ trình" Click="OK" IsDefault="True" Canvas.Left="392" Canvas.Top="320"></Button>
        <Button Content="Hủy" IsCancel="True" Click="Cancle" Canvas.Left="596" Canvas.Top="320" RenderTransformOrigin="2.303,0.425"></Button>
    </Canvas>
</Window>
